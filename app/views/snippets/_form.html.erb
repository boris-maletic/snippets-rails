<%= form_for @snippet do |f| %>
  <% if @snippet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>

      <ul>
      <% @snippet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :filename %>
    <%= f.text_field :filename, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 10, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: 'btn btn-primary' %>
    <%= link_to "Cancel", mine_snippets_path, class: 'btn btn-default' %>
  </div>
<% end %>

