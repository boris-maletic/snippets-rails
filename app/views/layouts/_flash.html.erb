<% if flash[:alert] || flash[:notice] %>
  <div class="row flash">
    <div class="col-xs-12">
      <%if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <%if flash[:notice] %>
        <div class="alert alert-info">
          <%= flash[:notice] %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
